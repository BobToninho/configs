	],

	/* Fira Code italic fix */
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": ["comment", "punctuation.definition.comment" /* , "variable.language" */],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},

	/* Theme */
	"workbench.colorTheme": "Palenight Theme",
	"workbench.colorCustomizations": {
		"editorIndentGuide.activeBackground": "#c4c4c4a6",
		"list.focusBackground": "#000"
	},

	/* Not found */
	"standard.run": "onSave"
}
